                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button x:Name="bontonAyuda" Content="" Foreground="#FF180121" Height="53.326" FontWeight="Bold" FontSize="16" OpacityMask="#FF20CB47" Width="56.683" Canvas.Left="334.781" Canvas.Top="253.58" Click="ayuda">
