                    <ImageBrush ImageSource="help-browser.png"/>
                </Button.Background>
            </Button>
            <Label x:Name="label" Content="HEIMLICH" Height="97.025" FontWeight="Bold" FontFamily="Ravie" FontSize="53.333" Background="{x:Null}" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" Width="414.464">
