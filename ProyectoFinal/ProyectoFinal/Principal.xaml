                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button x:Name="button_Copy" Content="Mi Perfil" Foreground="#FF180121" Height="40" FontWeight="Bold" FontSize="16" OpacityMask="#FF20CB47" Width="165" Canvas.Left="93.769" Canvas.Top="191.96" d:LayoutOverrides="Width" Click="miPerfil">
