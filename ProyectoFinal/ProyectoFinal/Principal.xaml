                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFF1E06F" Offset="0"/>
                        <GradientStop Color="#FF581870" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button x:Name="button_Copy1" Content="Juegos" Foreground="#FF180121" Height="40" FontWeight="Bold" FontSize="16" OpacityMask="#FF20CB47" Width="165" Canvas.Left="93.769" Canvas.Top="266.906" d:LayoutOverrides="Width" Click="juegos">
